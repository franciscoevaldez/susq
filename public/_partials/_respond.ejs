<div id="page--respond" class="respond">

  <div class="respond__user">
    Your name:
    <input type="text" name="response--name" id="response--name">
  </div>

  <div class="respond__questions">

    <% for(var slug in public.questions._data){ %>
      <%- include("../questions/_question", { title: public.questions._data[slug].question, index: slug }) %>
    <% }; %>

  </div>

  <div class="respond__send">
    <a href="#">Send response</a>
  </div>

</div>
